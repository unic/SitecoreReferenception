<configuration>
  <sitecore>

    <referenception>
      <providers hint="list">
        <provider type="Referenception.Common.FieldReferencesProvider, Referenception.Common">
          <displayName>Show Field References</displayName>
          <templates hint="list">
            <template>Standard template</template>
          </templates>
          <fieldtypes hint="list">
            <fieldname>Droplink</fieldname>
            <fieldname>Droptree</fieldname>
            <fieldname>Droplist</fieldname>
            <fieldname>Multilist</fieldname>
          </fieldtypes>
        </provider>

        <provider type="Referenception.Common.CloneReferencesProvider, Referenception.Common">
          <displayName>Show Clone References</displayName>
          <templates hint="list">
            <template>Standard template</template>
          </templates>
        </provider>

        <provider type="Referenception.Common.UsageReferencesProvider, Referenception.Common">
          <displayName>Show Usage References</displayName>
          <templates hint="list">
            <template>Standard template</template>
          </templates>
        </provider>
      </providers>
    </referenception>

    <commands>
      <command name="referenception:showreferences" type="Referenception.Core.Commands.ShowReferences,Referenception.Core" />
    </commands>

    <settings>
      <setting name="Referenception.ApplicationUrl" value="/sitecore/client/referenception/item references" />
    </settings>
    
  </sitecore>
</configuration>